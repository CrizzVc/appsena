<div id="form-cr">
  <%= form_with(model: anime) do |form| %>
    <% if anime.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(anime.errors.count, "error") %> prohibited this anime from being saved:</h2>

        <ul>
          <% anime.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="frm">
      <div>
        <%= form.label :name, style: "display: block" %>
      </div>
      
      <div class="mgn">
        <%= form.text_field :name %>
      </div>
    </div>

    <div class="frm">
      <div>
        <%= form.label :año, style: "display: block" %>
      </div>
      
      <div class="mgn">
        <%= form.number_field :año %>
      </div>
    </div>

    <div class="frm">
      <div>
        <%= form.label :personajes, style: "display: block" %>
      </div>
      
      <div class="mgn">
        <%= form.text_field :personajes %>
      </div>
    </div>


    <div class="frm">
      <p>
        <%= form.label :img, style: "display: block" %>
      </p>
      <div class="mgn">
        <%= form.text_field :img %>
      </div>
    </div>

    <div class="frm">
      <%= form.submit %>
    </div>
  <% end %>

</div>
