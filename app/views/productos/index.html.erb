<% content_for :title, "Productos" %>

<h1>Productos</h1>

<div id="productos">
  <% @productos.each do |producto| %>
    <%= render producto %>
    <p>
      <%= link_to "Show this producto", producto %>
    </p>
  <% end %>
</div>

<p id="newPj" class="btn btn-primary">
  <%= link_to "New producto", new_producto_path %>
</p>

